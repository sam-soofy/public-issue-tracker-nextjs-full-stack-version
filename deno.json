{
  "imports": {
    "@std/assert": "jsr:@std/assert@1"
  },
  "unstable": [
    "bare-node-builtins",
    "detect-cjs",
    "node-globals",
    "unsafe-proto",
    "sloppy-imports"
  ],
  "tasks": {
    "dev": "deno run --allow-ffi --allow-run --allow-env --allow-net --allow-read --allow-write --allow-sys npm:next dev",
    "build": "deno run --allow-ffi --allow-run --allow-env --allow-read --allow-write --allow-sys npm:next build",
    "start": "deno run --allow-env --allow-net --allow-sys npm:next start",
    "lint": "deno run --allow-env --allow-read --allow-write npm:eslint . --fix",
    "openapi:generate": "deno run --allow-env --allow-read --allow-write npm:next-openapi-gen generate"
  }
}
